version: "3.7"
services:
  wyze-mqtt:
    container_name: wyze-mqtt
    build:
      context: .
      dockerfile: Dockerfile
    image: raetha/wyze-mqtt
    hostname: wyze-mqtt
    restart: always
    tty: true
    stop_signal: SIGINT
    network_mode: bridge
    devices:
      - "/dev/hidraw0:/dev/hidraw0"
    volumes:
      - "/docker/wyze-mqtt/config:/opt/wyze-mqtt/config"
    environment:
      TZ: "America/New_York"
